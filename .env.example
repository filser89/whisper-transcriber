# .env.example
# Copy this file to `.env` and fill in your own values.

# Hugging Face access token (required for diarization)
HUGGINGFACE_TOKEN=hf_yourtokenhere

# (Optional) default output directory for transcripts
# OUTPUT_DIR=~/transcripts

# --- Transcription defaults ---
# Whisper model size: tiny | base | small | medium | large-v3
MODEL_SIZE=medium

# Language code (e.g. 'ru' for Russian). Leave empty for auto-detect.
LANGUAGE=ru

# Device to run inference: cpu | cuda
DEVICE=cpu

# Decoding beam size (higher = better quality, slower speed)
BEAM_SIZE=5

# Enable simple voice-activity filtering: true | false
VAD_FILTER=true

